@tailwind base;
@tailwind components;
@tailwind utilities;

::-webkit-scrollbar {
  width: theme("width.2");
}

::-webkit-scrollbar-track {
  background-color: theme("backgroundColor.zinc.200");
}

::-webkit-scrollbar-thumb {
  background-color: theme("backgroundColor.bujinkan-red");
}

::-webkit-scrollbar-thumb:hover {
  background-color: theme("backgroundColor.bujinkan-red");
}
